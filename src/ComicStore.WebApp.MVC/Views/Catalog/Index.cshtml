@using System.Globalization
@model List<ComicStore.Catalog.Domain.Item>

@{
    ViewData["Title"] = "Vitrine";
}
<style>
    h4 {
        font-weight: 600;
    }

    p {
        font-size: 12px;
        margin-top: 5px;
    }

    .price {
        font-size: 30px;
        margin: 0 auto;
        color: #333;
    }

    .description {
        text-align: justify;
    }

    .right {
        float: right;
        border-bottom: 2px solid #4B8E4B;
    }

    .thumbnail {
        opacity: 0.70;
        -webkit-transition: all 0.5s;
        transition: all 0.5s;
    }

        .thumbnail:hover {
            opacity: 1.00;
            box-shadow: 0px 0px 10px #4bc6ff;
        }

    .line {
        margin-bottom: 5px;
    }

    @@media screen and (max-width: 770px) {
        .right {
            float: left;
            width: 100%;
        }
    }

    .product_view .modal-dialog {
        max-width: 800px;
        width: 100%;
    }

    .pre-cost {
        text-decoration: line-through;
        color: #a5a5a5;
    }

    .space-ten {
        padding: 10px 0;
    }
</style>
<div class="container">

    <h1>Quadrinhos</h1>
    <br />
    <div class="row">
        @{
            foreach (var item in Model.OrderBy(i => i.CategoryId))
            {
            <div class="col-md-3 col-sm-6">
                <span class="thumbnail">
                    <a asp-controller="Catalog" asp-action="ItemDetails" asp-route-id="@item.Id"><img width="200" height="200" src="~/Images/@item.ImageUrl" /></a>
                    <h4>@item.Name</h4>
                    <p>@item.StockQuantity em estoque</p>
                    <p class="description">@item.Description</p>
                    <hr class="line">
                    <div class="row">
                        <div>
                            <p class="price">@item.Price.ToString("C", CultureInfo.CreateSpecificCulture("pt-BR"))</p>
                        </div>
                    </div>
                </span>
            </div>
            }
        }

    </div>
</div>

